<link rel="stylesheet" href="/css/preguntas/preguntasLi.css">
<form action="/preguntas/preguntasLi/{{user.idUsuarios}}" method="get"></form>
<div id="contenedor">
    <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <div id="idPregunta">
                <p>{{tituloPregunta}}</p>
            </div>
            <div id="desPregunta">
                <p>{{descripcionPregunta}}</p>
            </div>
            <div id="preguntaFe">
                <p>{{fechaPregunta}}</p>
            </div>
            <div id="preguntaHo">
                <p>{{horaPregunta}}</p>
            </div>
            <div id="boton">
                <div id="Editar">
                    <a href="/preguntas/preguntasEd/{{idAyudaPet}}"><button>Editar</button></a>
                </div>
                <div id="Eliminar">
                    <a href="/preguntas/preguntasEl/{{idAyudaPet}}"><button>Eliminar</button></a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>