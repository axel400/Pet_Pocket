<link rel="stylesheet" href="/css/">
<form action="/bells/listar/{{user.idUsuarios}}" method="get"></form>
<div id="contenedor">
    <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <div id="idbells">
                <p>{{titulo}}</p>
            </div>
            <div id="Titulo">
                <p>{{titulo}}</p>
            </div>
            <div id="Descripcion">
                <p>{{descripcion}}</p>
            </div>
             <div id="Imagenbells">
                <p>{{imagenbells}}</p>
            </div>
            <div id="boton">
                <div id="editar">
                    <a href="/bells/editar/{{idbells}}"><button type="button">Editar</button></a>
                </div>
                <div id="eliminar">
                    <a href="/bells/eliminar/{{idbells}}"><button type="button">Eliminar</button></a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>