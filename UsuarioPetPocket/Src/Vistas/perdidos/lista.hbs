<link rel="stylesheet" href="/css/facturaElectronica/tarifaIva/lista.css">
<form action="/perdido/lista/{{user.idUsuarios}}" method="get"></form>
<div id="contenedor">
    <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <div id="idPerdido">
                <p>{{ImagenPerdido}}</p>
            </div>
            <div id="imagen">
                <p>{{ImagenPerdido}}</p>
            </div>
            <div id="fecha">
                <p>{{FechaPerdido}}</p>
            </div>
            <div id="descripcion">
                <p>{{DescripcionPerdido}}</p>
            </div>
            <div id="telefono">
                <p>{{TelefonoPerdido}}</p>
            </div>
            <div id="boton">
                <div id="editar">
                    <a href="/perdido/editar/{{idPerdido}}"><button type="button">Editar</button></a>
                </div>
                <div id="eliminar">
                    <a href="/perdido/eliminar/{{idPerdido}}"><button type="button">Eliminar</button></a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>