<form action="/tienda/lista/{{user.idPerdidos}}"
<div id="contenedor">
     <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <div id="idtienda">
                <p>{{fotoTienda}}</p>
            </div>
            <div id="tituloTienda">
                <p>{{tituloTienda}}</p>
            </div>
            <div id="fotoTienda">
                <p>{{fotoTienda}}</p>
            </div>

            <div id="categoriaTienda">
                <p>{{categoriaTienda}}</p>
            </div>

            <div id="descripccionTienda">
                <p>{{descripccionTienda}}</p>
            </div>
            
            <div id="boton">
                <div id="editar">
                    <a href="/perdido/editar/{{idtienda}}"><button type="button">Editar</button></a>
                </div>
                <div id="eliminar">
                    <a href="/perdido/eliminar/{{idtienda}}"><button type="button">Eliminar</button></a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>