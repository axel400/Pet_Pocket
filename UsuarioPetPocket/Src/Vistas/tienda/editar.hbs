<link rel="stylesheet" href="#">
<div id="contenedor">
    {{#each lista}}

    <form action="/tienda/editar/{{idtienda}}" method="post">
    <div id="titulo">
        <p> Agrega tus productos favoritos </p>
    </div>

    <div id="tituloTienda">
        <label>Nombre Producto:</label>
        <input type="text" name="tituloTienda" value="{{tituloTienda}}" required>
    </div>

    <div id="fotoTienda">
        <label> Tu Producto </label>
        <input type="text" name="fotoTienda" value="{{fotoTienda}}" required>
    </div>
    <div id="categoriaTienda">
        <label> Categoria Producto:</label>
        {{!-- <input type="text" name="FechaPerdido" required>  --}}
               <select name="Categoria" value="{{categoriaTienda}}" >
                    <option>Juguete</option>
                    <option>Comida</option>
                    <option>Ropa</option>
                </select>
    </div>
    <div id="descripccionTienda">
        <label>Descripcion:</label>
        <input type="text" name="descripccionTienda" value="{{descripccionTienda}}" required>
    </div>

    <div id="boton">
        <button type="submit">Actualizar</button>
    </div>
    </form>
    {{/each}}
</div>